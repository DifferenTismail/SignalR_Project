@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya İle İlgili İşlemleri Aşağıdan Yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Link</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SocialMeadiaID</td>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMeadiaID" class="btn btn-outline-danger btn-rounded">Sil</a></td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMeadiaID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">Yeni Sosyal Medya Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

