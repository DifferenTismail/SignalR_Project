@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Yazı Girişi</div>
						</div>
						<input type="hidden" asp-for="ContactID"/>
						<div class="card-body">
							@*------------------------------------------------------------------*@
							<div class="form-group">
								<label for="Location">Konumu Giriniz</label>
								<input type="text" class="form-control" asp-for="Location" id="Location">
							</div>
							@*------------------------------------------------------------------*@
							<div class="form-group">
								<label for="Phone">Telefon Numarası Giriniz</label>
								<input type="tel" class="form-control" asp-for="Phone" id="Phone">
							</div>
							@*------------------------------------------------------------------*@
							<div class="form-group">
								<label for="Mail">Mail Adresi Giriniz</label>
								<textarea rows="5" type="email" class="form-control" asp-for="Mail" id="Mail"></textarea>
							</div>
							@*------------------------------------------------------------------*@
							<div class="form-group">
								<label for="FooterDescription">Açıklama Giriniz</label>
								<textarea rows="5" type="text" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>
							</div>
							@*------------------------------------------------------------------*@
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Yazısını Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>

	</div>

</div>

